# This is Git's per-user configuration file.

[include]
	# For username / creds / etc
	path = ~/.gitconfig.local

[github]
	user = BenEdV

[alias]
	a = add
	s = status
	cm = commit -m
	b = branch
	co = checkout
	cp = cherry-pick

[core]
	excludesfile = ~/.gitignore_global
	autocrlf = input

[commit]
	gpgsign = false
[pull]
	rebase = false
[init]
	defaultBranch = main
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
