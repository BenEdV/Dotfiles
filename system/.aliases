#! /bin/bash

# Easier navigation: .., ..., ...., .....
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# Coloured ls
export CLICOLOR=1
export LSCOLORS=GxFxBxDxCxegedabagacad
alias ls='ls -GFh'
alias la='ls -a'

# Matlab
alias matlab='/Applications/MATLAB_R2018a.app/bin/matlab -nodesktop -nosplash'

# Profile command
alias reload_profile=". ~/.bash_profile"

# python virtual environment
alias ve="source venv/bin/activate"

# remove all latex temp files
alias clean_latex="rm -r {.,**,**/**}/*.{aux,log,fls,fdb_latexmk,synctex.gz}"

# postgres
alias postgres="/Applications/Postgres.app/Contents/Versions/9.6/bin/psql -p5432 -d"

# simple web server
alias webserver="python -m SimpleHTTPServer 8000"

# docker compose
alias dc="docker-compose"
