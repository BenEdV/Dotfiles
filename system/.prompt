#! bin/bash

# Hash the hostname to create a random colour for each host
for (( i=0; i<${#HOSTNAME}; i++ )); do
  l="${HOSTNAME:$i:1}"
  has+=$(printf '%d\n' "'$l")
done

col=$((has%255+1))

prompt="\[\e[36m\]\u" #username
prompt="$prompt\[\e[m\]@" #@
prompt="$prompt\[\e[38;5;$col""m\]\h" #hostname
prompt="$prompt\[\e[m\]:" #:
prompt="$prompt\[\e[33;1m\]\w\n" #directory
prompt="$prompt\[\e[m\]\$ " #prompt
export PS1=$prompt